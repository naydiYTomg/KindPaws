{
    private List<(AnimalDTO, string, string)> _rawData = 
    [
        (new AnimalDTO { Id = 0, Name = "Барсук" }, "Очень классный барсучок. Поступил к нам 14.02.23. Добрый и здоровый", "0/barsuk.png"),
        (new AnimalDTO { Id = 1, Name = "Кощк" }, "Милый котик ждёт своего хозяина. Пушистый и ласковый, приучен к лотку", "1/koshk.png"),
        (new AnimalDTO { Id = 3, Name = "Сбка" }, "Хороший пёсик, преданный друг и бравый защитник. Приучен гулять", "2/sbka.jpeg")
    ];
}
